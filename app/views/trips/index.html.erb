<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>Distance travelled</th>
      <th>Start address</th>
      <th>Finish address</th>
      <th>Start lat</th>
      <th>Start long</th>
      <th>Finish lat</th>
      <th>Finish long</th>
      <th>Fare</th>
      <th>Avail seats</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.distance_travelled %></td>
        <td><%= trip.start_address %></td>
        <td><%= trip.finish_address %></td>
        <td><%= trip.start_lat %></td>
        <td><%= trip.start_long %></td>
        <td><%= trip.finish_lat %></td>
        <td><%= trip.finish_long %></td>
        <td><%= trip.fare %></td>
        <td><%= trip.avail_seats %></td>
        <td><%# trip.driver %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

